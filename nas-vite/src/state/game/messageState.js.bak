// src/state/game/messageState.js
export const MessageState = {
    messages: [],
    currentMessage: '',
    isTyping: false,

    // Methods
    addMessage(message, type) {
        this.messages = [...this.messages, { text: message, type }];
        this.currentMessage = message;
        this.isTyping = true;
    },

    setTyping(value) {
        this.isTyping = value;
    },

    clearMessages() {
        this.messages = [];
        this.currentMessage = '';
        this.isTyping = false;
    }
};

// Bind methods to MessageState
Object.getOwnPropertyNames(MessageState)
    .filter(prop => typeof MessageState[prop] === 'function')
    .forEach(method => {
        MessageState[method] = MessageState[method].bind(MessageState);
    });

export default MessageState;